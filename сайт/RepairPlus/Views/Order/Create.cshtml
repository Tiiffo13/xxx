@model Order

<section class="breadcrumb-area">
    <div class="container text-center">
        <h1>Оформление заказа</h1>
    </div>
</section>

<section class="team-area">
    <div class="container">
        <form asp-controller="Order" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">ФИО</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Почта</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label">Номер телефона (с +7)</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Service" class="control-label">Тип автомобиля</label>
                <select asp-for="Service" class="form-control">
                    <option value="Ремонт телефона">Ремонт телефона</option>
                    <option value="Ремонт планшета">Ремонт планшета</option>
                    <option value="Ремонт ПК">Ремонт ПК</option>
                </select>
                <span asp-validation-for="Service" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Message" class="control-label">Сообщение</label>
                <textarea asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Добавить заказ</button>
            </div>
        </form>
    </div>
</section>

<script src="https://cdn.ckeditor.com/4.19.0/standard/ckeditor.js"></script>
<script>

    CKEDITOR.replace('Message');
</script>